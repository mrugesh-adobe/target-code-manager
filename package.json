{
  "name": "target-code-manager",
  "version": "1.0.0",
  "description": "A scalable Adobe Target code management tool with linting capabilities",
  "main": "build.js",
  "scripts": {
    "build": "node build.js",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint src/**/*.js",
    "lint:css": "stylelint src/**/*.css",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix",
    "dev": "node build.js --watch",
    "clean": "rimraf dist/*"
  },
  "keywords": [
    "adobe-target",
    "code-management",
    "linting",
    "bundler"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.57.0",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "rimraf": "^5.0.5",
    "chokidar": "^3.6.0"
  },
  "dependencies": {
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "html-minifier-terser": "^7.2.0",
    "terser": "^5.27.0",
    "clean-css": "^5.3.3"
  }
}
